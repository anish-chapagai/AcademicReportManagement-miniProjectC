#include <stdio.h>
#include <conio.h>
#include <stdlib.h>
#include <string.h>
void add(struct person *);
void show(struct person *);
void edit(struct person *);
void del(struct person *);
int menu();
struct person{
	char name[20];
	int roll;
	char div[6];
	char depart[5];
	int marks[6];
//	char sub[6][20]={"PHYSICS","MATHEMATICS","DRAWING","BASIC ELECTRICAL","C PROGRAMMING","APPLIED MECHANICS"};
}p[20];
main(){
	start:
	switch(menu()){
		case 1:
			add(p);
			break;
		case 2:
			//edit(p);
			break;
		case 3:
			//del(p);
			break;
		case 4:
			show(p);
			break;
		case 5:
			//tabulate(p);
		case 6:
			system("cls");
			printf("\n\n<---------------Thank you for using the program---------->\n\n");
			exit(0);
		default:
			printf("Enter valid option: ");
			break;
	}
	goto start;
}
void add(struct person *per){
	int i=-1,j=0;
	for (int k=0;per[k].name[0]!='\0';k++){
		i++;
	}
	printf("Enter name: ");
	scanf("%s",per[i].name);
	printf("\nEnter department: ");
	scanf("%s",per[i].depart);
	printf("\nEnter Roll Number: ");
	scanf("%d",&per[i].roll);
	printf("Enter marks in:\n");
		printf("Physics: ");
		scanf("%d",&per[i].marks[j]);
		j++;
		printf("Applied Mechanics: ");
		scanf("%d",&per[i].marks[j]);
		j++;
		printf("Drawing: ");
		scanf("%d",&per[i].marks[j]);
		j++;
		printf("C Programming: ");
		scanf("%d",&per[i].marks[j]);
		j++;
		printf("Mathematics: ");
		scanf("%d",&per[i].marks[j]);
		j++;
		printf("Basic Electrical: ");
		scanf("%d",&per[i].marks[j]);
}
int menu(){
	system("cls");
int dec;
	printf("\t-----------------------------------------------------------\n");
	printf("\t|\t\t    WRC RESULT SHEET                       |\n");
	printf("\t-----------------------------------------------------------\n");
	printf("\t|   1) ADD NEW RECORD\t        |   2)EDIT EXISTING RECORD |\n");
	printf("\t-----------------------------------------------------------\n");
	printf("\t|   3) DELETE EXISTING RECORD\t|   4)SHOW EXISTING RECORD |\n");
	printf("\t-----------------------------------------------------------");
	printf("\n\t|   5) TABULATE DATA            |   6)EXIT PROGRAM         |");
	printf("\n\t-----------------------------------------------------------");
	printf("\n==>");
	scanf("%d",&dec);
	return (dec);	
}
void show(struct person *per){
	system("cls");
	int count=-1,j=0;
	float percent;
	char nam[20];
	printf("Enter the name of the student: ");
	scanf("%s",nam);
	system("cls");
	//STRUCTURE_COUNT
	for (int i=0;(strcmp(nam,per[i].name)) != 1;i++){
		count++;
	}
	printf("----------------------------------------------------------------------\n");
	printf("|\tName: %s\t|  Roll: %d\t|  Department: %s               |\n",per[count].name,per[count].roll,per[count].depart);
	printf("----------------------------------------------------------------------");
	printf("\n\t|  Subjects\t\t   |   Marks |");
		printf("\n\n\t|  Physics \t");
		printf("\t   |  %d     |",per[count].marks[j]);
		j++;
		printf("\n\n\t|  Applied Mechanics ");
		printf("\t   |  %d     |",per[count].marks[j]);
		j++;
		printf("\n\n\t|  Drawing ");
		printf("\t\t   |  %d     |",per[count].marks[j]);
		j++;
		printf("\n\n\t|  C Programming ");
		printf("\t   |  %d     |",per[count].marks[j]);
		j++;
		printf("\n\n\t|  Mathematics ");
		printf("\t\t   |  %d     |",per[count].marks[j]);
		j++;
		printf("\n\n\t|  Basic Electrical ");
		printf("\t   |  %d     |\n\n",per[count].marks[j]);
		//PERCENTAGE_CALCULATION
		for (int i=0;i<6;i++){
			percent += per[count].marks[i];
		}
		percent /= 6;
		printf("\t---------------------------------");
		printf("\n\t|  PERCENTAGE:    |  %.2f        |\n",percent);
		printf("\t---------------------------------\n");
		printf("\t|  DIVISION:      |       ");
		//DIVISION_CALCULATION
		j = percent;
		/*
		switch(j){
			case (j > 80):
				printf("FIRST DIVISION");
				break;
			case (j > 70):
				
				break;
			case (j > 60):
				
				break;
			case (j > 50):
				
				break;
			case (j > 40):
				
				break;
			default:
				
				break;
		}
		*/
		printf("       |\n\t---------------------------------");
		getch();
}
