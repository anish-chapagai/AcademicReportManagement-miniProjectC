	printf("\n\t|   5) TABULATE DATA            |   6)EXIT PROGRAM         |");
	printf("\n\t-----------------------------------------------------------");
	printf("\n==>");
	scanf("%d",&dec);
	return (dec);	
}
void show(struct person *per){
	system("cls");
	int count=-1,j=0;
	char nam[20];
	printf("Enter the name of the student: ");
	scanf("%s",nam);
	for (int i=0;(strcmp(nam,per[i].name)) != 1;i++){
		count++;
	}
	printf("|\tName: %s\t|  Roll: %d\t|  Department: %s\n",per[count].name,per[count].roll,per[count].depart);
	printf("------------------------------------------------------------------");
	printf("\n\tSubjects\t|  Marks |");
	printf("\n\tPhysics \t");
		printf("%d",&per[count].marks[j]);
		j++;
		printf("\n\tApplied Mechanics ");
		printf("\t%d",&per[count].marks[j]);
		j++;
		printf("\n\tDrawing ");
		printf("\t%d",&per[count].marks[j]);
		j++;
		printf("\n\tC Programming ");
		printf("\t%d",&per[count].marks[j]);
		j++;
		printf("\n\tMathematics ");
		printf("\t%d",&per[count].marks[j]);
		j++;
		printf("\n\tBasic Electrical ");
		printf("\t%d",&per[count].marks[j]);
}
